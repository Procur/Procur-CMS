
<div id="createNewPost">
  <div class="container">
    <h1>New Company Blog Post</h1>
    <section id="companyBlogPostForm">
      
      <form action="/companyPost/new" method="post" enctype="multipart/form-data">
        <!--TITLE-->
        <div class="row">
        <div class="col-md-6">
        <h3>TITLE:</h3>
        <div><input type="text" name="title" placeholder="Enter Title..." size="70"></div>
        <!--DATE-->
        </div>
        <div class="col-md-3">
        <h3>DATE TO RELEASE:</h3>
          <div>
            <input class="dateCheckbox"  id="nowCheckbox" type="checkbox" name="checkCurrentDate" value="true" placeholder="Enter Date... (example --> 05 January 2014)" size="70">
            <span>Now</span>
          </div>
          <div>
            <input class="dateCheckbox" id="futureCheckbox" type="checkbox" name="checkFutureDate" value="true">
            <span>Later</span>
          </div>
          <div>
            <input id="futureDate" type="text" name="textFutureDate" placeHolder="Enter Date... (example  05 January 2014)" size="70">
          </div>
          </div>
          <div class="col-md-3">
        <!--CATEGORY-->
        <h3>CATEGORY:</h3>
        <div>
          <select type="text" name="category" placeholder="Category">
            <option>Select a category</option>
            <option value="Platform Updates &amp; Annoucements">Platform Updates &amp; Annoucements</option>
            <option value="Company News">Company News</option>
            <option value="Affiliates &amp; Partnerships">Affiliates &amp; Partnerships</option>
            <option value="Initiatives &amp; Philanthropy">Initiatives &amp; Philanthropy</option>
          </select></br></br>
        </div>
        </div></div>
        <div class="row">
        <div class="col-md-6">
        <!--IMAGE-->
        <h3>IMAGE</h3>
        <p>Image: <input type="file" name="image" /></p>
        </div>

        <div class="col-md-6">
        <!--TAGS-->
        <h3>TAGS</h3>
        <div><input type="text" class="tagField" name="tagArray" placeholder="type a TAG and PRESS RIGHT ARROW and add more..." size="70"><span><input type='button' onclick="removeTags();" value="Delete Tags"></span><span class='tagContainer'></span></div>
        <div><input type="hidden" class="tagSender" name="tagSender" placeholder="tag sender" size="70"></div>
        </div></div>

        <div class="row">
        <div class="col-md-12">
        <!--CONTENT-->
        <h3>CONTENT</h3>
        <div><textarea name="content" rows="15" cols="50" placeholder="Content"></textarea></div>
        </div></div>

        <div class="row">
        <div class="col-md-12">
        <!--PUBLISHED NOW???-->
        <h3>PUBLISH</h3>
        <div><input type="checkbox" name="published" value="true">Check to publish NOW|||Uncheck to send to DRAFTS</div>
        <!--SUBMIT-->
        <div><input type="submit"></div>
        </div></div>
        
      </form>
    </section>
  </div>
</div>


<script>
  var tagArrayAll = [];
  $('.tagField').keydown(function(e) {
    var currentTag = $(this).val();
    if(e.which == 39) {
      $('.tagContainer').append('<span class="oneTag">'+currentTag+'&nbsp;&nbsp;</span>');
      $('.tagField').val('');
      tagArrayAll.push(currentTag);
      $('.tagSender').val(tagArrayAll);
      console.log(tagArrayAll);
      console.log(typeof tagArrayAll);
    }
  });

  function removeTags() {
    $('.oneTag').remove();
    $('.tagSender').val("");
    window.tagArrayAll = [];
  }

  $("body").css({"background-color":"#E6E6E6"});



</script>
