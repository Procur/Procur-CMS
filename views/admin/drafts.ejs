<h1>Drafts</h1>

<% drafts.forEach(function(draft){ %>

  <% if(draft.generalCategory=='marketingpost'){ %>
  <p>Marketing Post DRAFT</p>
  <a href="/marketingPost/edit/<%= draft.id %>"><strong><%= draft.title %></strong></a>
  <p><span>Content:</span><%= draft.shortContent %></p>
  <% } %>

  <% if(draft.category=='pressrelease'){ %>
  <p>Press Release DRAFT</p>
  <a href="/pressRelease/edit/<%= draft.slug %>"><strong><%= draft.title %></strong></a>
  <p><span>Abstract</span><%= draft.abstract %></p>
  <% } %>
  
<% }); %>
