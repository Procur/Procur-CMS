
<%- partial('../partials/adminHeader') %>

<div id="adminCMS">
  <div class="container">
    <div class="col-ld-12 col-md-12 col-sm-12 col-xs-12 draftsWrapper">
      <h1>Holding Tank</h1>
      <h2 class="draftsHeader">Pending</h1>
      <!--Blog POST READY-->
        <% payload[1].forEach(function(post){ %>
          <% if(post.generalCategory=='Blogpost'){ %>
            <a class="readyBlockLink" href="/BlogPost/edit/<%= post.slug %>">
              <div class="innerblock">
                <p class="titleHoldingTank"> Blog Post </p>
                <p><%= post.title %></p>
                <p><%- post.shortContent %></p>
                <div class="dateHover">Days Left:&nbsp;<%- post.daysLeft %></div>
              </div>
            </a>
          <% } %>
          <% if(post.generalCategory=='pressrelease'){ %>
            <a class="readyBlockLink" href="/pressrelease/edit/<%= post.slug %>">
              <div class="innerblock">
                <p class="titleHoldingTank"> Press Release </p>
                <p><%= post.title %><p>
                <p><%- post.abstract %></p>
                <div class="dateHover">Days Left:&nbsp;<%- post.daysLeft %></div>
              </div>
            </a>
          <% } %>
        <% }); %>
      <h2 class="draftsHeader">Drafts</h1>
      <!--Blog POST DRAFTS -->
        <% payload[0].forEach(function(post){ %>
          <% if(post.generalCategory=='Blogpost'){ %>
            <a class="draftsBlockLink" href="/BlogPost/edit/<%= post.slug %>">
              <div class="innerblock">
                <p class="titleHoldingTank">Blog Post DRAFT</p>
                <p><%= post.title %></p>
                <p><%- post.shortContent %></p>
              </div>
            </a>
          <% } %>
      <!--PRESS RELEASE DRAFTS -->
          <% if(post.generalCategory=='pressrelease'){ %>
            <a class="draftsBlockLink" href="/pressrelease/edit/<%= post.slug %>">
              <div class="innerblock">
                <p class="titleHoldingTank">Press Release DRAFT</p>
                <p><%= post.title %></p>
                <p><%- post.abstract %></p>
              </div>
            </a>
          <% } %>
        <% }); %>
      </div>
    </div>
  </dvi>
